{
  "name": "server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch --env-file=.env.development run src/index.ts && tsc --watch",
    "dev:staging": "bun --watch --env-file=.env.staging run src/index.ts && tsc --watch",
    "start:staging": "bun --env-file=.env.staging run dist/index.js",
    "start:prod": "bun --env-file=.env.production run dist/index.js",
    "test": "bun test",
    "dev:workers": "wrangler dev --env development",
    "dev:workers:staging": "wrangler dev --env staging",
    "deploy:workers": "bun run build && wrangler deploy --env production",
    "deploy:workers:staging": "bun run build && wrangler deploy --env staging",
    "build:workers": "tsc && wrangler deploy --dry-run",
    "logs:tail": "wrangler tail",
    "logs:tail:follow": "wrangler tail --format=pretty",
    "logs:download": "wrangler tail --download",
    "logs:debug": "wrangler dev --local --inspect"
  },
  "dependencies": {
    "@workos-inc/node": "^7.69.2",
    "hono": "^4.7.11",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "wrangler": "^4.36.0"
  }
}