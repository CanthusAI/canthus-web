{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Environment settings
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    // Types
    "types": [
      "bun-types"
    ],
    // Output settings
    "declaration": true,
    "outDir": "dist",
    "noEmit": false,
    "emitDecoratorMetadata": true,
    // Module resolution
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/**/*",
    "tests/index.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}